<body style="background-color: orange;"></body>
<center><h1 class="jumbotron primary">Burger App</h1></center>


<img src="/icons8-beef-burger-64.png" alt="Burger">


<center><h2>Add a Burger</h2>
<!-- Pass in data from server.js -->
<form class="create-form">

  <div class="form-group">
    <label for="burgername">Name:</label>
    <input type="text" id="name" name="burgername">
  </div>

  <button type="submit">Add Burger</button>
</form></center>
<div class='container'>
  <div class='row'>
    <div class='col-6'>
<ul>
  {{#each burgers}}
  {{#unless this.eaten}}
  <li>
    <p><span class="label">ID:</span> {{this.id}}</p>
    <p><span class="label">Name:</span> {{this.burgername}}</p>
    <p><span class="label">Eaten:</span> {{this.eaten}}</p>
    <button class = "eat btn btn-primary" data-burgerid={{this.id}}>Eat Burger</button>
  </li>
 {{/unless}}
  {{/each}}
</ul>
    </div>
    <div class='col-6'>
      <ul>
